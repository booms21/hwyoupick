/* pages/personal/mycollection/mycollection.wxss */

page{

    background-color: #f0f0f0;
}
.collection_list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between; /*???*/
  align-content: space-around;
  font-size: 0.7rem;
  padding: 10rpx;
  padding-top: 0rpx;
}


.item-img>image {
  width: 100%;
  height: 337rpx; /*图片高度*/
}

.item-box {
  width: 48%;
  height: 430rpx;
  margin-top: 3%;
  background-color: #fff;
  border-radius: 5rpx;
}

.item-info {
  padding: 0rpx 10rpx 0rpx 10rpx;
}

.info-title {
  padding-left: 10rpx;
  font-size: 0.8rem;
}

.info-pick>image {
  width: 30rpx;
  height: 30rpx;
}

.info-pick {
  float: right;
  height: 45rpx;
  width: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.info-price {
  padding-left: 10rpx;
  font-size: 35rpx;
  float: left;
  color: #f82800;
  width: 60%;
}
